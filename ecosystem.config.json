{
  "apps": [
    {
      "name": "inventory-frontend-dev",
      "script": "npm",
      "args": "start",
      "cwd": "/var/www/inventory-frontend",
      "instances": 1,
      "exec_mode": "fork",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000
      },
      "log_file": "/var/log/pm2/inventory-frontend-dev.log",
      "out_file": "/var/log/pm2/inventory-frontend-dev-out.log",
      "error_file": "/var/log/pm2/inventory-frontend-dev-error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "restart_delay": 1000,
      "max_restarts": 10,
      "min_uptime": "5s"
    }
  ]
}
